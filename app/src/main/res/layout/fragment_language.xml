<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/country_image"
        android:layout_width="80dp"
        android:layout_height="80dp"
        app:srcCompat="@drawable/ic_fr" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/level1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_marginStart="@dimen/profile_margin"
        app:srcCompat="@drawable/language_level_color1" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/level2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_marginStart="@dimen/profile_margin"
        app:srcCompat="@drawable/language_level_color2" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/level3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_marginStart="@dimen/profile_margin"
        app:srcCompat="@drawable/language_level_grey3" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/level4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_marginStart="@dimen/profile_margin"
        app:srcCompat="@drawable/language_level_grey4" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/level5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_marginStart="@dimen/profile_margin"
        app:srcCompat="@drawable/language_level_grey5" />

</LinearLayout>